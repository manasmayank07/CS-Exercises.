public class LogBase2 {
    public static int lg(int n) {
        int count = 0;
        while (n >= 2) {
            n = n / 2;
            count++;
        }
        return count;
    }

    public static void main(String[] args) {
        System.out.println(lg(1));  // 0
        System.out.println(lg(2));  // 1
        System.out.println(lg(8));  // 3
        System.out.println(lg(20)); // 4
    }
}
